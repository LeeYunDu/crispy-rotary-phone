{
    "defaultSeverity": "warning",
    "extends": [
      "tslint:recommended"
    ],
    "linterOptions": {
      "exclude": [
        "node_modules/**"
      ]
    },
    "rules": {
      //引用规范
      "quotemark": false,
      "indent": [
        true,
        "spaces",
        2
      ],
      "interface-name": false,
      "ordered-imports": false,
      "object-literal-sort-keys": false,
      "no-consecutive-blank-lines": false,
      "whitespace": false,
      //console警告被关闭
      "no-console": false,
      //尾部空格检测
      "no-trailing-whitespace": false,
      //const偏好  方便后期维护更改
      "prefer-const": false,
      "trailing-comma":false,
      "no-bitwise":true,
      "semicolon":false,
      "no-shadowed-variable":false,
      "arrow-parens":false
    }
  }